{
  "openapi": "3.0.1",
  "info": {
    "title": "my-api",
    "version": "1.0.0"
  },
  "paths": {
    "/pets/": {
      "get": {
        "responses": {
          "200": {
            "description": "List",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Animal"
                  },
                  "discriminator": {
                    "propertyName": "pet_type"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pets/:id": {
      "get": {
        "responses": {
          "200": {
            "description": "1 pet",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Animal"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Animal": {
        "type": "object",
        "required": [
          "race",
          "id"
        ],
        "properties": {
          "race": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "isKnown": {
            "type": "boolean"
          },
          "measurement": {
            "$ref": "#/components/schemas/measurement"
          }
        }
      },
      "measurement": {
        "type": "object",
        "properties": {
          "height": {
            "type": "integer"
          },
          "weight": {
            "type": "integer"
          }
        }
      }
    }
  }
}